@{
    ViewData["Title"] = "Account";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Account</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body class="bg-light">

    <div class="container">
        <div class="row justify-content-center align-items-center" style="height: 100vh;">
            <div class="col-md-6 col-lg-5" id="accountContainer">
                <!-- Initial content will be loaded here -->
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading Application...</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            // Load Login Partial by default
            loadLoginPartial();

            // Use event delegation for dynamic elements
            $(document).on("click", "#goSignUp", function (e) {
                e.preventDefault();
                loadSignUpPartial();
            });

            $(document).on("click", "#goLogin", function (e) {
                e.preventDefault();
                loadLoginPartial();
            });

            $(document).on("submit", "#loginForm", function (e) {
                e.preventDefault();
                loadEmployeePage();
                return false;
            });

            $(document).on("submit", "#signupForm", function (e) {
                e.preventDefault();
                loadEmployeePage();
                return false;
            });
        });

        function loadLoginPartial() {
            showLoading("Loading Login...");

            $.ajax({
                url: "/Account/Login",
                type: "GET",
                success: function (data) {
                    $("#accountContainer").html(data);
                },
                error: function() {
                    showError("Failed to load login page. Please try again.", function() {
                        loadLoginPartial();
                    });
                }
            });
        }

        function loadSignUpPartial() {
            showLoading("Loading Sign Up...");

            $.ajax({
                url: "/Account/SignUp",
                type: "GET",
                success: function (data) {
                    $("#accountContainer").html(data);
                },
                error: function() {
                    showError("Failed to load sign up page. Please try again.", function() {
                        loadSignUpPartial();
                    });
                }
            });
        }

        function loadEmployeePage() {
            showLoading("Loading Employee Management...");

            $.ajax({
                url: "/Account/GetEmployeePage",
                type: "GET",
                success: function (data) {
                    $("#accountContainer").html(data);
                    // Update browser URL without reload
                    history.pushState({ page: "employee" }, "Employee Management", "/Employee");
                },
                error: function (xhr, status, error) {
                    console.error("Error loading employee page:", error);
                    showError("Failed to load employee page. Please try again.", function() {
                        loadLoginPartial();
                    });
                }
            });
        }

        function showLoading(message) {
            $("#accountContainer").html(`
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">${message}</p>
                </div>
            `);
        }

        function showError(message, retryFunction) {
            $("#accountContainer").html(`
                <div class="alert alert-danger">
                    ${message}
                    <div class="mt-2">
                        <button class="btn btn-sm btn-primary" onclick="(${retryFunction.toString()})()">
                            Retry
                        </button>
                        <button class="btn btn-sm btn-secondary" onclick="loadLoginPartial()">
                            Back to Login
                        </button>
                    </div>
                </div>
            `);
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>