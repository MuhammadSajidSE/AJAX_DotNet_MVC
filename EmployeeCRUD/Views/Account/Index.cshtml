@{
    ViewData["Title"] = "Account";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Account</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        #accountContainer {
            transition: opacity 0.3s ease;
        }
        .full-height-row {
            min-height: 100vh;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container">
        <div class="row full-height-row justify-content-center align-items-center">
            <div id="accountContainer" class="col-12">
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">Loading Application...</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            if (!document.querySelector('link[href*="font-awesome"]')) {
                $('head').append('<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">');
            }
            loadLoginPartial();
            $(document).on("click", "#goSignUp", function (e) {
                e.preventDefault();
                loadSignUpPartial();
            });

            $(document).on("click", "#goLogin", function (e) {
                e.preventDefault();
                loadLoginPartial();
            });
        });
        function loadLoginPartial() {
            $("#accountContainer").removeClass("col-lg-8 col-xl-6").addClass("col-md-6 col-lg-5");
            $.ajax({
                url: "/Account/Login",
                type: "GET",
                success: function (data) {
                    $("#accountContainer").html(data);
                },
                error: function() {
                    showError("Failed to load login page. Please try again.", function() {
                        loadLoginPartial();
                    });
                }
            });
        }

        function loadSignUpPartial() {
            $("#accountContainer").removeClass("col-lg-8 col-xl-6").addClass("col-md-6 col-lg-5");
            $.ajax({
                url: "/Account/SignUp",
                type: "GET",
                success: function (data) {
                    $("#accountContainer").html(data);
                },
                error: function() {
                    showError("Failed to load sign up page. Please try again.", function() {
                        loadSignUpPartial();
                    });
                }
            });
        }
        function loadEmployeePage() {
            // Check if user is logged in
            var currentUser = localStorage.getItem("currentUser");
            if (!currentUser) {
                // User is not logged in → load login form
                loadLoginPartial();
                return;
            }

            // User is logged in → load employee page
            $("#accountContainer").removeClass("col-md-6 col-lg-5").addClass("col-12");

            $.ajax({
                url: "/Employee",
                type: "GET",
                success: function (data) {
                    $("#accountContainer").html(data);
                    history.pushState({ page: "employee" }, "Employee Management", "/Employee");
                },
                error: function (xhr, status, error) {
                    console.error("Error loading employee page:", error);
                    showError("Failed to load employee page. Please try again.", function() {
                        loadLoginPartial();
                    });
                }
            });
        }

        $(document).ready(function () {
            $(document).on("click", "#goSignUp, #goLogin", function (e) {
                e.preventDefault();
                $("#accountContainer").removeClass("col-12").addClass("col-md-6 col-lg-5");
            });
        });
        function showLoading(message) {
            $("#accountContainer").html(`
                <div class="text-center">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2">${message}</p>
                </div>
            `);
        }

        function showError(message, retryFunction) {
            $("#accountContainer").html(`
                <div class="alert alert-danger">
                    ${message}
                    <div class="mt-2">
                        <button class="btn btn-sm btn-primary" onclick="(${retryFunction.toString()})()">
                            Retry
                        </button>
                        <button class="btn btn-sm btn-secondary" onclick="loadLoginPartial()">
                            Back to Login
                        </button>
                    </div>
                </div>
            `);
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
