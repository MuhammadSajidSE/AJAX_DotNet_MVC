@model IEnumerable<EmployeeCRUD.Models.Employee>

<h2>Search Employee By ID</h2>

<form method="get" asp-action="Search">
    <input type="number" name="id" placeholder="Enter Employee ID" required />
    <button type="submit">Search</button>
</form>

@if (Model.Any())
{
    <table border="1" style="margin-top:10px;">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Contact</th>
            <th>Department</th>
            <th>Gender</th>
            <th>Actions</th>
        </tr>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.id</td>
                <td>@emp.name</td>
                <td>@emp.contact</td>
                <td>@emp.department</td>
                <td>@emp.Gender</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@emp.id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@emp.id">Delete</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p>No employee found.</p>
}
