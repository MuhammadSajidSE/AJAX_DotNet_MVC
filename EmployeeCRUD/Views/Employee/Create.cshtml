@model EmployeeCRUD.Models.Employee

<h2>Add New Employee</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Name</label>
        <input asp-for="name" />
        <span asp-validation-for="name" style="color:red"></span>
    </div>
    <div>
        <label>Contact</label>
        <input asp-for="contact" />
        <span asp-validation-for="contact" style="color:red"></span>
    </div>
    <div>
        <label>Department</label>
        <input asp-for="department" />
        <span asp-validation-for="department" style="color:red"></span>
    </div>
    <div>
        <label>Gender</label>
        <select asp-for="Gender">
            <option value="">Select Gender</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
        <span asp-validation-for="Gender" style="color:red"></span>
    </div>
    <button type="submit">Save</button>
    <a asp-action="Index">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
